<%= simple_form_for(event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.input :description %>
  </div>

  <div class="field">
    <%= form.input :start_date %>
  </div>

  <div class="field">
    <%= form.input :end_date %>
  </div>

  <div class="field">
    <%= form.association :receiver, collection: current_user.receivers.pluck(:name,:id), prompt: true %>
  </div>

  <div class="field">
    <%= form.input :hour %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
